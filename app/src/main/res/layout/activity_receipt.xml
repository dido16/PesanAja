<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Pesan Aja"
                android:textColor="#F5711B"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="24 Des 2025, 10:00"
                android:textSize="12sp"
                android:textColor="#757575"/>

            <TextView
                android:id="@+id/tvStatusOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:text="PENDING"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#F44336"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="16dp"
                android:background="@drawable/dashed_line" />

            <TextView
                android:id="@+id/tvReceiptInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meja: 01\nPelanggan: "
                android:lineSpacingExtra="4dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="16dp"
                android:background="@drawable/dashed_line" />

            <LinearLayout
                android:id="@+id/containerItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="16dp"
                android:background="@drawable/dashed_line" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">
                <TableRow>
                    <TextView android:text="Subtotal" />
                    <TextView android:id="@+id/tvReceiptSubtotal" android:gravity="end" android:textStyle="bold" />
                </TableRow>
                <TableRow android:layout_marginTop="4dp">
                    <TextView android:text="PPN (10%)" />
                    <TextView android:id="@+id/tvReceiptPajak" android:gravity="end" android:textStyle="bold" />
                </TableRow>
                <TableRow android:layout_marginTop="8dp">
                    <TextView android:text="TOTAL" android:textSize="18sp" android:textStyle="bold" />
                    <TextView android:id="@+id/tvReceiptGrandTotal" android:gravity="end" android:textColor="#2E7D32" android:textSize="18sp" android:textStyle="bold" />
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="--- TERIMA KASIH ---"
                android:textColor="#BDBDBD"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btnPayNow"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#F5711B"
            android:text="Memuat..."
            android:textAllCaps="false"
            android:textStyle="bold"/>
    </LinearLayout>
</ScrollView>